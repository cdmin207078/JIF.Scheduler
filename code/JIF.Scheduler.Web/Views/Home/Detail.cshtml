
@{
    ViewBag.Title = "Detail";

    var job = ViewBag.Job as JIF.Scheduler.Core.Domain.JobInfo;
}


<div class="row">
    <div class="col-md-6">
        <form action="/home/detail/@job.Id" method="post">
            <div class="box box-primary">
                <div class="box-header with-border">
                    <h3 class="box-title">
                        <span class="text-muted">[任务]</span> - <b class="text-light-blue">@job.Name</b>
                    </h3>
                </div>


                <div class="box-body">

                    <div class="form-group">
                        <label for="txtJobName">名称</label>
                        <input type="text" class="form-control" id="txtJobName" name="Name" placeholder="任务名称" value="@job.Name">
                    </div>

                    <div class="form-group">
                        <label for="txtJobDescription">描述</label>
                        <input type="text" class="form-control" id="txtJobDescription" name="Description" placeholder="任务描述说明" value="@job.Description">
                    </div>

                    <div class="form-group">
                        <label for="txtJobUrl">服务地址</label>
                        <input type="url" class="form-control" id="txtJobUrl" name="ServiceUrl" placeholder="任务具体处理程序服务地址" value="@job.ServiceUrl">
                    </div>

                    <div class="form-group">
                        <label for="txtCronString">cron-expression</label>
                        <input type="text" class="form-control" id="txtCronString" name="CronString" placeholder="任务具体处理程序服务地址" value="@job.CronString">
                    </div>
                </div>

                <div class="box-footer">
                    <button type="submit" class="btn btn-primary">保 存</button>
                </div>

            </div>
        </form>
    </div>

    <div class="col-md-6">
        @Html.Partial("__CronExpressionsDoc")
    </div>
</div>


@section Scripts {
    <script type="text/javascript">

    </script>
}