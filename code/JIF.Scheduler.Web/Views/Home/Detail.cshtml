
@{
    ViewBag.Title = "Detail";
}


<div class="row">
    <div class="col-md-8">

        <div class="box box-primary">
            <div class="box-header with-border">
                <h3 class="box-title">
                    <span class="text-muted">[任务]</span> - <b class="text-light-blue">生成离线下载导出报表</b>
                </h3>
            </div>


            <div class="box-body">

                <div class="form-group">
                    <label for="txtJobName">名称</label>
                    <input type="text" class="form-control" id="txtJobName" placeholder="任务名称" value="生成离线下载导出报表">
                </div>

                <div class="form-group">
                    <label for="txtJobDescription">描述</label>
                    <input type="text" class="form-control" id="txtJobDescription" placeholder="任务描述说明">
                </div>

                <div class="form-group">
                    <label for="txtJobUrl">服务地址</label>
                    <input type="url" class="form-control" id="txtJobUrl" placeholder="任务具体处理程序服务地址">
                </div>

                <div class="row">
                    <div class="col-xs-5">
                        <div class="form-group">
                            <label for="txtJobDescription">起始时间</label>
                            <input type="text" class="form-control" id="txtJobName" placeholder="起始时间">
                        </div>
                    </div>

                    <div class="col-xs-5">
                        <div class="form-group">
                            <label for="txtJobDescription">终止时间</label>
                            <input type="text" class="form-control" id="txtJobName" placeholder="终止时间">
                        </div>
                    </div>

                    <div class="col-xs-2">
                        <div class="form-group">
                            <input type="checkbox" class="minimal" id="chkForeverRun" checked>
                            <label for="chkForeverRun">永远执行</label>
                        </div>
                    </div>

                </div>

            </div>



        </div>
    </div>
</div>